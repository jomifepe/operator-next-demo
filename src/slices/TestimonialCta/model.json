{
  "id": "testimonial_cta",
  "type": "SharedSlice",
  "name": "TestimonialCta",
  "description": "A versatile slice for displaying testimonials or call-to-action sections",
  "variations": [
    {
      "id": "testimonial",
      "name": "Testimonial",
      "docURL": "...",
      "version": "initial",
      "description": "Testimonial variation with quote, avatar, author name and role",
      "imageUrl": "",
      "primary": {
        "quote": {
          "type": "StructuredText",
          "config": {
            "label": "Quote",
            "single": "paragraph",
            "placeholder": "Enter the testimonial quote"
          }
        },
        "avatar": {
          "type": "Image",
          "config": {
            "label": "Avatar",
            "constraint": {
              "width": 300,
              "height": 300
            }
          }
        },
        "authorName": {
          "type": "Text",
          "config": {
            "label": "Author Name",
            "placeholder": "Enter author name"
          }
        },
        "authorRole": {
          "type": "Text",
          "config": {
            "label": "Author Role",
            "placeholder": "Enter author role or description"
          }
        }
      }
    },
    {
      "id": "callToAction",
      "name": "Call to Action",
      "docURL": "...",
      "version": "initial",
      "description": "CTA variation with heading, description and button",
      "imageUrl": "",
      "primary": {
        "heading": {
          "type": "StructuredText",
          "config": {
            "label": "Heading",
            "single": "heading2",
            "placeholder": "Enter heading"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "multi": "paragraph,strong,em,hyperlink",
            "placeholder": "Enter description text"
          }
        },
        "button": {
          "type": "Link",
          "config": {
            "label": "Button",
            "allowText": true,
            "placeholder": "Select button link",
            "select": null
          }
        }
      }
    }
  ]
}
