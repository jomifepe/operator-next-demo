          "type": "Text",
          "config": {
            "label": "Author Name",
            "placeholder": "Enter author name..."
          }
        },
        "author_description": {
          "type": "Text",
          "config": {
            "label": "Author Description",
            "placeholder": "Enter author description..."
          }
        }
      }
    }
